<launch>

  <node name="image_publisher"
        pkg="jsk_perception" type="image_publisher.py">
    <remap from="~output" to="~image_color" />
    <remap from="~output/camera_info" to="~camera_info" />
    <rosparam subst_value="true">
      file_name: $(find jsk_perception)/sample/kiva_pod_image_color.jpg
      encoding: rgb8
      publish_info: false
      fovx: 84.1
      fovy: 53.8
    </rosparam>
  </node>

  <node pkg="jsk_perception" name="add_camera_info" type="add_camera_info.py" output="screen">
    <remap from="~input" to="image_publisher/image_color" />
    <remap from="~output" to="image_publisher/camera_info" />
    <rosparam subst_value="true">
      yaml_filename: $(find jsk_perception)/sample/config/insta360_air.yaml
    </rosparam>
  </node>

</launch>
