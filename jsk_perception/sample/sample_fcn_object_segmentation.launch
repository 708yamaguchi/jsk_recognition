<launch>

  <arg name="gui" default="true" />

  <node name="image_publisher"
        pkg="jsk_perception" type="image_publisher.py">
    <rosparam subst_value="true">
      publish_info: false
      file_name: $(find jsk_perception)/sample/object_detection_example_1.jpg
    </rosparam>
  </node>

  <node name="fcn_object_segmentation"
        pkg="jsk_perception" type="fcn_object_segmentation.py"
        output="screen">
    <remap from="~input" to="image_publisher/output" />
    <rosparam subst_value="true">
      gpu: -1
      model_name: fcn8s
      model_h5: $(find jsk_perception)/trained_data/fcn8s_from_caffe.chainermodel
      target_names:
        - background
        - aeroplane
        - bicycle
        - bird
        - boat
        - bottle
        - bus
        - car
        - cat
        - chair
        - cow
        - diningtable
        - dog
        - horse
        - motorbike
        - person
        - potted plant
        - sheep
        - sofa
        - train
        - tv/monitor
    </rosparam>
  </node>

  <node name="label_image_decomposer"
        pkg="jsk_perception" type="label_image_decomposer.py">
    <remap from="~input" to="image_publisher/output" />
    <remap from="~input/label" to="fcn_object_segmentation/output" />
  </node>

  <group if="$(arg gui)">
    <node name="image_view"
          pkg="image_view" type="image_view">
      <remap from="image" to="label_image_decomposer/output/label_viz" />
    </node>
  </group>

</launch>
