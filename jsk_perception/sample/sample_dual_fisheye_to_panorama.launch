<launch>
  <arg name="gui" default="true"/>

  <arg name="INPUT_IMAGE" default="/insta360/image_raw" />

  <node name="dual_fisheye_to_panorama"
        pkg="nodelet" type="nodelet"
        args="standalone jsk_perception/DualFisheyeToPanorama">
    <remap from="~input" to="$(arg INPUT_IMAGE)"/>
    <param name="light_compen" value="false" />
    <param name="refine_align" value="false" />
    <param name="fovd" value="185.0" />
    <param name="mls_map_path" value="$(find jsk_perception)/config/fisheye_stitcher_grid_xd_yd_3840x1920.yml.gz" />
  </node>

  <group if="$(arg gui)">

    <node name="image_view"
          pkg="image_view" type="image_view">
      <remap from="image" to="dual_fisheye_to_panorama/output"/>
    </node>
  </group>
</launch>
