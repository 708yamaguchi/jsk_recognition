<launch>

  <!-- insta360 air settings -->
  <arg name="use_usb_cam" default="false" />
  <arg name="camera_name" default="insta360" />
  <arg name="vendor" default="0x2e1a" />
  <arg name="product" default="0x1000"/>
  <arg name="width" default="3008" />
  <arg name="height" default="1504" />
  <arg name="video_mode" default="mjpeg" />
  <arg name="frame_rate" default="30" />
  <arg name="gui" default="true" />
  <!-- Rectify settings -->
  <arg name="calibration" default="false" />
  <arg name="rectification" default="false" />
  <arg name="yaml_filename00" default="$(find jsk_perception)/sample/config/insta360_air.yaml" />
  <arg name="yaml_filename01" default="$(find jsk_perception)/sample/config/insta360_air.yaml" />

  <!-- Publish camera image -->
  <!-- For melodic or newer -->
  <include unless="$(arg use_usb_cam)" file="$(find jsk_perception)/launch/libuvc_camera.launch">
    <arg name="camera_name" value="$(arg camera_name)" />
    <arg name="vendor" value="$(arg vendor)" />
    <arg name="product" value="$(arg product)" />
    <arg name="height" value="$(arg height)" />
    <arg name="width" value="$(arg width)" />
    <arg name="video_mode" value="$(arg video_mode)" />
    <arg name="frame_rate" value="$(arg frame_rate)" />
    <arg name="gui" value="$(arg gui)" />
  </include>
  <!-- For kinetic or older -->
  <include if="$(arg use_usb_cam)" file="$(find jsk_perception)/launch/usb_cam.launch">
    <arg name="camera_name" value="$(arg camera_name)" />
    <arg name="video_device" value="/dev/insta360" />
    <arg name="height" value="$(arg height)" />
    <arg name="width" value="$(arg width)" />
    <arg name="video_mode" value="$(arg video_mode)" />
    <arg name="frame_rate" value="$(arg frame_rate)" />
    <arg name="gui" value="$(arg gui)" />
  </include>

  <!-- Split insta360 air image into 2 fisheye image -->
  <node pkg="jsk_perception" name="split_image" type="split_image.py" output="screen">
    <remap from="~input" to="/insta360/image_raw" />
    <rosparam>
      vertical_parts: 1
      horizontal_parts: 2
    </rosparam>
  </node>

  <!-- Relay fisheye images -->
  <node pkg="topic_tools" name="relay00" type="relay"
        args="/split_image/output/vertical00/horizontal00 /insta360/vertical00/horizontal00/image_raw" />
  <node pkg="topic_tools" name="relay01" type="relay"
        args="/split_image/output/vertical00/horizontal01 /insta360/vertical00/horizontal01/image_raw" />

  <!-- When rectification -->
  <group if="$(arg rectification)">
    <!-- Publish camera info to match the fisheye images -->
    <node pkg="jsk_perception" name="add_camera_info_00" type="add_camera_info.py" output="screen">
      <remap from="~input" to="/insta360/vertical00/horizontal00/image_raw" />
      <remap from="~output" to="insta360/vertical00/horizontal00/camera_info" />
      <rosparam subst_value="true">
        yaml_filename: $(arg yaml_filename00)
      </rosparam>
    </node>
    <node pkg="jsk_perception" name="add_camera_info_01" type="add_camera_info.py" output="screen">
      <remap from="~input" to="/insta360/vertical00/horizontal01/image_raw" />
      <remap from="~output" to="insta360/vertical00/horizontal01/camera_info" />
      <rosparam subst_value="true">
        yaml_filename: $(arg yaml_filename01)
      </rosparam>
    </node>
    <!-- rectify fisheys image -->
    <node ns="/insta360/vertical00/horizontal00" pkg="image_proc" name="image_proc00" type="image_proc" />
    <node ns="/insta360/vertical00/horizontal01" pkg="image_proc" name="image_proc01" type="image_proc" />
    <!-- View rectified images -->
    <group if="$(arg gui)">
      <node pkg="image_view" name="image_view_insta360_rectified_00" type="image_view"
            args="image:=/insta360/vertical00/horizontal00/image_rect_color" />
      <node pkg="image_view" name="image_view_insta360_rectified_01" type="image_view"
            args="image:=/insta360/vertical00/horizontal01/image_rect_color" />
    </group>
  </group>

  <!-- When calibration -->
  <group if="$(arg calibration)">
    <node pkg="camera_calibration" name="cameracalibrator_00" type="cameracalibrator.py"
          args="--size 6x5 --square 0.030 image:=/insta360/vertical00/horizontal00/image_raw" />
    <node pkg="camera_calibration" name="cameracalibrator_01" type="cameracalibrator.py"
          args="--size 6x5 --square 0.030 image:=/insta360/vertical00/horizontal01/image_raw" />
  </group>

</launch>
